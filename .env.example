# Environment Configuration Example for Internship Portal
# Copy this file to .env.local for development or configure in Vercel for production

# ==========================================
# REQUIRED ENVIRONMENT VARIABLES
# ==========================================

# JWT Authentication (REQUIRED for production)
JWT_SECRET=your-secure-32-character-jwt-secret-here
NEXTAUTH_SECRET=another-secure-32-character-secret

# Environment Configuration
NODE_ENV=production
VERCEL=1
VERCEL_ENV=production

# Database Configuration (for Vercel serverless)
DATABASE_URL=memory://
ENABLE_MEMORY_DB=true

# Optional: Email Service (set ENABLE_EMAIL_SERVICE=true to activate)
ENABLE_EMAIL_SERVICE=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourorganization.edu

# Security & Performance Settings
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CSRF=true
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
SESSION_TIMEOUT=86400

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Optional: Advanced Features
ENABLE_ERROR_TRACKING=true
METRICS_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=30
MAX_EMAILS_PER_HOUR=100

# ==========================================
# DEVELOPMENT ONLY
# ==========================================

# Enable debug logging
DEBUG=false

# Skip certain validations in development
SKIP_VALIDATIONS=false